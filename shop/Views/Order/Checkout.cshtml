
@model Order
 
<div class="col-md-6 p-lg-2 mx-auto my-5 text-center">
	<h3>Оформление заказа</h3>
	<form asp-action="Checkout" method="post" class="form-horizontal">
		<div class="form-group">
			<label asp-for="Email"></label>
			<div class="col-md-15">
				<input asp-for="Email" class="form-control text-center" />
				<span asp-validation-for="Email" class="text-danger"></span>

			</div>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<div class="col-md-15">
				<input asp-for="Password" class="form-control text-center" />
				<span asp-validation-for="Password" class="text-danger "></span>

			</div>
		</div>
		<input class="btn btn-success col-md-2 mt-2" type="submit" value="Завершить заказ" asp-action="Complete"/>
	</form>


</div>
